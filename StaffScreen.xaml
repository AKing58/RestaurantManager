<Window x:Class="COMP4952.StaffScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COMP4952"
        mc:Ignorable="d"
        Title="StaffScreen" Height="546" Width="877">

    <DataGrid Name="gridEmployees" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}"/>
            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}"/>
            <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
            <DataGridTextColumn Header="Rate" Binding="{Binding Rate}"/>
            <DataGridTextColumn Header="Phone" Binding="{Binding Phone}"/>
        </DataGrid.Columns>
      
    </DataGrid>


</Window>
