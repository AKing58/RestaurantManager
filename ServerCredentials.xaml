<Window x:Class="COMP4952.ServerCredentials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COMP4952"
        mc:Ignorable="d"
        Title="ServerCredentials" Height="162" Width="210">
    <Grid Height="142">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Please Enter the Server Name" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="166" Grid.ColumnSpan="2"/>
        <Button Name="SubmitButton" Content="Submit" HorizontalAlignment="Left" Margin="84,100,0,0" VerticalAlignment="Top" Click="SubmitButton_Click" Grid.ColumnSpan="2"/>
        <TextBox Name="serverTextBox" HorizontalAlignment="Center" Text="ServerName" TextWrapping="Wrap" VerticalAlignment="Center" Width="166" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
